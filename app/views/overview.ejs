<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'/>
  <link rel='stylesheet prefetch' href='http://netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css'>
  <link href="/js/bower_components/DataTables/media/css/jquery.dataTables.min.css" rel='stylesheet'>

  <script src='/js/fullCalendarResources/lib/moment/moment.js'></script>
  <script src='/js/fullCalendarResources/lib/jquery/dist/jquery.js'></script>
  <script src="/js/bower_components/DataTables/media/js/jquery.dataTables.min.js"></script>
  <script src="/js/overview.js"></script>
</head>
<body>
<div class="container"> <div class="padding">
	<div class="col-lg-12">
		<h1> Booking Overviews </h1>
				<table id="Bookings">
					<thead>
						<th> Client </th>
						<th> Dates + Times </th>
						<th> Other </th>
						<th> Fees </th>
						<th> </th>
					</thead>
					<tbody>
					</tbody>
				</table>

			<% for(var i=0; i<bookings.length; i++) {%>
				<div class="panel panel-default"> 
					<div class="panel-heading"> <h3><%= bookings[i].client%> <small>in <%= bookings[i]._resources.name%></small></div>
					<div class="panel-body">
						<p> <em> <%= bookings[i].title %> </em> </p>
						<p> Booking Form: Received </p>
						<p> Payment: Pending </p>
						<% if (bookings[i].allDay === true) { %>
						<p> <strong>Full Day Booking </strong></p>
						<% } %>
						<p class="bookingDate"> <strong><%= bookings[i].start %> </strong> to  <strong> <%= bookings[i].end%> </strong></p>
					</div>
				</div>
			<% } %>

	</div>
</div> </div>
  <script src='http://codepen.io/assets/libs/fullpage/jquery.js'></script>
  <script src='http://netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js'></script>
</body>
</html>
